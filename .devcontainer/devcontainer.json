{
  "name": "RevenantOS Dev",
  "dockerFile": "Dockerfile",

  // Forward common dev ports (customize as needed)
  "forwardPorts": [3000, 5173, 8000, 8080],

  // Mount workspace
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  // Features (VS Code Dev Container Features)
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    }
  },

  // Extensions you want preinstalled
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },

  // Run after container is created
  "postCreateCommand": "npm install --global pnpm && echo 'Dev container ready.'"
}
